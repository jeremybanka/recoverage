{
	"name": "recoverage.cloud",
	"type": "module",
	"private": true,
	"scripts": {
		"go": "concurrently \"bun:setup:*\" && wrangler deploy --minify",
		"setup:deps": "bun run --filter=* build",
		"setup:scripts": "bun __scripts__/gen-scripts.bun.ts",
		"setup:types": "wrangler types",
		"setup:db": "bun db:up --remote",
		"gen": "concurrently \"bun:gen:*\"",
		"gen:scripts": "bun __scripts__/gen-scripts.bun.ts",
		"gen:types": "wrangler types",
		"dev": "wrangler dev --live-reload",
		"test": "vitest",
		"test:once": "vitest run",
		"db:gen": "drizzle-kit generate",
		"db:up": "wrangler d1 migrations apply recoverage-data",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "concurrently \"bun:lint:types:*\"",
		"lint:types:main": "tsgo --noEmit",
		"lint:types:scripts": "tsgo --noEmit --project __scripts__/tsconfig.json",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"preview": "concurrently \"bun:preview:setup:*\" && wrangler deploy --minify --config wrangler-preview.jsonc",
		"preview:config": "bun __scripts__/configure-preview.bun.ts",
		"preview:setup:deps": "bun setup:deps",
		"preview:setup:scripts": "bun setup:scripts",
		"preview:setup:db": "./.env && wrangler d1 migrations apply $DATABASE_NAME --remote --config wrangler-preview.jsonc"
	},
	"dependencies": {
		"arktype": "2.1.25",
		"bun": "1.3.1",
		"drizzle-orm": "0.44.7",
		"hono": "4.10.4",
		"htmx.org": "2.0.8",
		"istanbul-lib-coverage": "3.2.2",
		"jurist": "0.0.7",
		"nanoid": "5.1.6",
		"octokit": "5.0.4"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "0.10.3",
		"@hono/vite-build": "1.7.0",
		"@hono/vite-dev-server": "0.23.0",
		"@octokit/types": "15.0.2",
		"@types/bun": "npm:bun-types@1.3.1",
		"@types/istanbul-lib-coverage": "2.0.6",
		"@types/node": "24.9.2",
		"@typescript/native-preview": "7.0.0-dev.20251030.1",
		"cloudflare": "5.2.0",
		"concurrently": "9.2.1",
		"drizzle-kit": "0.31.6",
		"eslint": "9.38.0",
		"fast-xml-parser": "5.3.0",
		"recoverage": "workspace:*",
		"recoverage-fixtures": "workspace:*",
		"vite": "7.1.12",
		"vitest": "3.2.4",
		"wrangler": "4.45.3"
	}
}
