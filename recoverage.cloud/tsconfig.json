{
	"extends": "../tsconfig.json",
	"include": ["src", "__tests__", "**/*.config.ts"],
	"compilerOptions": {
		"composite": true,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["ESNext"],
		"types": [
			"vite/client",
			"vitest/globals",
			"@cloudflare/workers-types/experimental",
			"@cloudflare/vitest-pool-workers"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx"
	}
}
