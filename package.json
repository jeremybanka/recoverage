{
	"name": "recoverage-monorepo",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"workspaces": [
		"packages/*",
		"recoverage.cloud"
	],
	"scripts": {
		"gen": "turbo run gen",
		"lint": "turbo run lint",
		"lint:biome": "turbo run lint:biome",
		"lint:deps": "pin-checker --ignore-workspaces",
		"lint:eslint": "turbo run lint:eslint",
		"lint:types": "turbo run lint:types",
		"watch:types": "turbo run watch:types --concurrency=30",
		"lint:fix:biome": "biome check --write *",
		"lint:fix:eslint": "eslint --fix .",
		"fmt": "biome format .",
		"fmt:fix": "biome format --write .",
		"build": "turbo run build",
		"bench": "cd lib && vitest bench",
		"test": "cross-env CI=true turbo run test:once --concurrency=2",
		"test:coverage:increased": "cross-env CI=true turbo run test:coverage:increased",
		"test:semver": "cross-env CI=true turbo run test:semver",
		"release": "bun run build && changeset publish",
		"notes": "changeset",
		"nuke": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' + && rm bun.lock"
	},
	"keywords": [],
	"author": "",
	"license": "BSD-3-Clause",
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@changesets/cli": "2.29.8",
		"@eslint/eslintrc": "3.3.3",
		"@eslint/js": "9.39.2",
		"@types/eslint": "9.6.1",
		"@typescript-eslint/eslint-plugin": "8.54.0",
		"@typescript-eslint/parser": "8.54.0",
		"@typescript/native-preview": "7.0.0-dev.20260130.1",
		"c8": "10.1.3",
		"cross-env": "10.1.0",
		"eslint-plugin-import-x": "4.16.1",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"jiti": "2.6.1",
		"pin-dependencies-checker": "2.7.1",
		"turbo": "2.8.0",
		"typescript": "5.9.3",
		"vitest": "3.2.4"
	},
	"packageManager": "bun@1.2.22",
	"trustedDependencies": [
		"@biomejs/biome",
		"bun",
		"esbuild",
		"rolldown",
		"sharp",
		"unrs-resolver",
		"workerd"
	]
}
