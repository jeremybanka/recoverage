{
	"name": "recoverage",
	"version": "0.1.13",
	"license": "BSD-3-Clause",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/recoverage.git",
		"directory": "packages/recoverage"
	},
	"type": "module",
	"files": [
		"bin",
		"dist",
		"src"
	],
	"main": "dist/recoverage.js",
	"types": "dist/recoverage.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./src/recoverage.d.ts",
			"import": "./dist/recoverage.js"
		},
		"./lib": {
			"types": "./src/recoverage.lib.d.ts",
			"import": "./dist/recoverage.lib.js"
		}
	},
	"bin": {
		"recoverage": "bin/recoverage.bin.js"
	},
	"scripts": {
		"dev": "tsdown --watch",
		"build": "tsdown && rm -f dist/*.x.d.ts",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsgo --noEmit",
		"watch:types": "tsgo --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"dependencies": {
		"@t3-oss/env-core": "0.13.8",
		"arktype": "2.1.28",
		"colors": "1.4.0",
		"comline": "0.4.3",
		"diff": "8.0.2",
		"istanbul-lib-coverage": "3.2.2",
		"istanbul-lib-report": "3.0.1",
		"istanbul-reports": "3.2.0",
		"simple-git": "3.30.0",
		"takua": "0.1.1",
		"tmp": "0.2.5"
	},
	"devDependencies": {
		"@types/bun": "npm:bun-types@1.3.4",
		"@types/istanbul-lib-coverage": "2.0.6",
		"@types/istanbul-lib-report": "3.0.3",
		"@types/istanbul-reports": "3.0.4",
		"@types/node": "24.10.1",
		"@types/tmp": "0.2.6",
		"@typescript/native-preview": "7.0.0-dev.20251207.1",
		"concurrently": "9.2.1",
		"eslint": "9.39.1",
		"nyc": "17.1.0",
		"recoverage-fixtures": "workspace:*",
		"tsdown": "0.17.0",
		"typescript": "5.9.3",
		"vite": "7.2.6",
		"vitest": "3.2.4",
		"yalc": "1.0.0-pre.53"
	}
}
