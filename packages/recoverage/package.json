{
	"name": "recoverage",
	"version": "0.1.11",
	"license": "BSD-3-Clause",
	"author": {
		"name": "Jeremy Banka",
		"email": "hello@jeremybanka.com"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremybanka/recoverage.git",
		"directory": "packages/recoverage"
	},
	"type": "module",
	"files": ["bin", "dist", "src"],
	"main": "dist/recoverage.js",
	"types": "dist/recoverage.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./src/recoverage.d.ts",
			"import": "./dist/recoverage.js"
		},
		"./lib": {
			"types": "./src/recoverage.lib.d.ts",
			"import": "./dist/recoverage.lib.js"
		}
	},
	"bin": {
		"recoverage": "bin/recoverage.bin.js"
	},
	"scripts": {
		"dev": "tsdown --watch",
		"build": "tsdown && rm -f dist/*.x.d.ts",
		"lint:biome": "biome check -- .",
		"lint:eslint": "eslint -- .",
		"lint:types": "tsc --noEmit",
		"watch:types": "tsc --watch --noEmit",
		"lint": "concurrently \"bun:lint:*\"",
		"test": "vitest",
		"test:once": "vitest run",
		"postversion": "biome format --write package.json"
	},
	"dependencies": {
		"@t3-oss/env-core": "0.13.4",
		"colors": "1.4.0",
		"comline": "0.3.0",
		"diff": "8.0.2",
		"istanbul-lib-coverage": "3.2.2",
		"istanbul-lib-report": "3.0.1",
		"istanbul-reports": "3.1.7",
		"simple-git": "3.27.0",
		"tmp": "0.2.3",
		"zod": "3.25.28"
	},
	"devDependencies": {
		"@types/bun": "npm:bun-types@1.2.14",
		"@types/istanbul-lib-coverage": "2.0.6",
		"@types/istanbul-lib-report": "3.0.3",
		"@types/istanbul-reports": "3.0.4",
		"@types/node": "22.15.21",
		"@types/tmp": "0.2.6",
		"concurrently": "9.1.2",
		"eslint": "9.27.0",
		"nyc": "17.1.0",
		"tsdown": "0.12.2",
		"typescript": "5.8.3",
		"vite": "6.3.5",
		"vitest": "3.1.4",
		"yalc": "1.0.0-pre.53"
	}
}
